{
  "compilerOptions": {
    "outDir": "./dist-types/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
